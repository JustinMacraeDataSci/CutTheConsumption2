<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_arena"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.justinmacrae.hype.Arena"
    android:background="@android:color/background_light">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txt_endure"
        android:textColor="@android:color/holo_green_light" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_hp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/txt_endure"
        android:layout_marginStart="26dp"
        android:textColor="@color/colorAccent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/line"
        android:id="@+id/line"
        android:layout_above="@+id/txt_endure"
        android:layout_alignParentStart="true" />

    <ImageButton
        app:srcCompat="@drawable/sword2"
        android:id="@+id/sword"
        android:layout_width="55dp"
        android:layout_height="120dp"
        android:background="@android:color/transparent"
        android:layout_above="@+id/line"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="55dp"
        app:srcCompat="@drawable/sword2"
        android:id="@+id/swordright"
        android:visibility="invisible"
        android:background="@android:color/transparent"
        android:layout_height="120dp"
        android:layout_above="@+id/line"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/enemyswordblue"
        android:id="@+id/enemy"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/swordright"
        android:id="@+id/txt_bosshp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/enemyswordred"
        android:id="@+id/attackred"
        android:layout_below="@+id/enemy"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/enemyswordred"
        android:id="@+id/rightred"
        android:layout_alignTop="@+id/attackred"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/countdown"
        android:hint="Get ready mortal..." />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/peerclown"
        android:id="@+id/evilclown"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="55dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/sword2"
        android:id="@+id/swordmid"
        android:visibility="invisible"
        android:layout_above="@+id/line"
        android:layout_alignStart="@+id/enemy"
        android:background="@android:color/transparent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/smallsword"
        android:id="@+id/midred"
        android:layout_below="@+id/countdown"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:visibility="invisible" />

</RelativeLayout>
